<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">

    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
        <param name="configure.url">/plugins/servlet/ws-slink-customer-priority/admin</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="customer-priority-plugin"/>
    
    <!-- add our web resources -->
    <web-resource key="customer-priority-plugin-resources" name="customer-priority-plugin web resources">
        <transformation extension="js">
            <transformer key="jsI18n"/>
        </transformation>
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="common.js" location="/js/common.js"/>
        <resource type="download" name="customer-priority-plugin.js" location="/js/customer-priority-plugin.js"/>
        <resource type="download" name="customer-priority-plugin.css" location="/css/customer-priority-plugin.css"/>
        <resource type="download" name="images/" location="/images"/>
<!--        <context>customer-priority-plugin</context>-->
        <context>jira.view.issue</context>
    </web-resource>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~ admin ~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<!--    <web-resource key="customer-priority-plugin-admin-resources" name="customer-priority-plugin admin web resources">-->
<!--        <transformation extension="js">-->
<!--            <transformer key="jsI18n"/>-->
<!--        </transformation>-->
<!--        <dependency>com.atlassian.auiplugin:ajs</dependency>-->
<!--        <resource type="download" name="common.js" location="/js/common.js"/>-->
<!--        <resource type="download" name="customer-priority-admin.js" location="/js/customer-priority-admin.js"/>-->
<!--        <resource type="download" name="customer-priority-admin.css" location="/css/customer-priority-admin.css"/>-->
<!--        <context>atl.admin</context>-->
<!--    </web-resource>-->
    <servlet key="admin-servlet" class="ws.slink.cp.servlet.AdminServlet">
        <resource type="i18n" name="i18n" location="customer-priority-plugin"/>
        <url-pattern>/ws-slink-customer-priority/admin</url-pattern>
    </servlet>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ config ~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <web-resource key="customer-priority-plugin-config" name="Config Web Resource">
        <transformation extension="js">
            <transformer key="jsI18n"/>
        </transformation>
        <dependency>com.atlassian.auiplugin:ajs</dependency>
<!--        <dependency>customer-priority-plugin:customer-priority-plugin-resources</dependency>-->
        <resource type="download" name="common.js" location="/js/common.js"/>
<!--        <resource type="download" name="common.js" location="/js/common.js"/>-->
<!--&lt;!&ndash;        <resource type="download" name="color-picker.js" location="/js/jsColorPicker.min.js">&ndash;&gt;-->
<!--&lt;!&ndash;            <property key="content-type" value="application/x-javascript"/>&ndash;&gt;-->
<!--&lt;!&ndash;        </resource>&ndash;&gt;-->
        <resource type="download" name="customer-priority-config.js" location="/js/customer-priority-config.js"/>
        <resource type="download" name="customer-priority-config.css" location="/css/customer-priority-config.css"/>
        <context>customer-priority-plugin</context>
<!--        <context>atl.jira.proj.config</context>-->
    </web-resource>
    <servlet key="config-servlet" class="ws.slink.cp.servlet.ConfigServlet">
        <resource type="i18n" name="i18n" location="customer-priority-plugin"/>
        <url-pattern>
            /project-config/*/ws-slink-customer-priority
        </url-pattern>
    </servlet>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~ config menu ~~~~~~~~~~~~~~~~~~~~~~~ -->
    <web-section key="cp-item-cfg-section" location="atl.jira.proj.config" weight="1000">
        <conditions type="AND" >
            <condition class="ws.slink.cp.condition.ConfigurationEnabledCondition"/>
        </conditions>
    </web-section>
    <web-item key="cp-item-cfg" section="atl.jira.proj.config/cp-item-cfg-section">
        <description key="cp-config-item.description" />
        <label key="cp-config-item.label" />
        <link linkId="cp-config-item-cfg.link">
            /plugins/servlet/project-config/$helper.project.key/ws-slink-customer-priority
        </link>
    </web-item>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~ panel ~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--  <web-resource key="customer-priority-plugin-panel" name="customer-priority-plugin-panel Web Resources">-->
    <!--    <dependency>com.atlassian.auiplugin:ajs</dependency>-->
    <!--    <resource type="download" name="customer-priority-panel.css" location="/css/customer-priority-panel.css"/>-->
    <!--    <resource type="download" name="customer-priority-panel.js" location="js/customer-priority-panel.js"/>-->
    <!--    <resource type="download" name="images/" location="/images"/>  -->
    <!--    <context>customer-priority-plugin</context>-->
    <!--    <context>jira.view.issue</context>-->
    <!--  </web-resource>-->
      <web-panel name="cp-panel" i18n-name-key="customer-priority-panel.name" key="customer-priority-panel" location="atl.jira.view.issue.right.context" weight="1">
        <description key="customer-priority-panel.description">Customer Priority Panel Module</description>
<!--        <conditions type="AND">-->
<!--          <condition class="ws.slink.atlassian.conditions.PanelCondition"/>-->
<!--        </conditions>-->
        <context-provider class="ws.slink.cp.context.PanelContextProvider"/>
        <resource name="view" type="velocity" location="templates/panel.vm"/>
      </web-panel>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ common ~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <rest key="rest" path="/ws-slink-customer-priority" version="2.0">
        <description>provides REST resources for the admin/config UI</description>
    </rest>
